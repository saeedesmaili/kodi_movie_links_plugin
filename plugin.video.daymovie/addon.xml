<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.daymovie"
version="1.0.0"
name="Movie Download Link Generator"
provider-name="Saeed Esmaili">
<requires>
  <import addon="xbmc.python" version="2.25.0"/>
  <import addon="script.module.requests" version="2.4.3"/>
  <import addon="script.module.beautifulsoup4" version="4.6.2"/>
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">Get Movie Download Links from DayMovie Website</summary>
  <description lang="en_GB">Using this addon you can get movie download links from daymovie website and play them here or in VLC.</description>
  <disclaimer lang="en_GB">You should have a vip account on daymovie.</disclaimer>
  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    <screenshot>resources\screenshot-01.jpg</screenshot>
    <screenshot>resources\screenshot-02.jpg</screenshot>
    <screenshot>resources\screenshot-03.jpg</screenshot>    
  </assets>
  <news>Updated with latest artwork metadata</news>
</extension>
</addon>
